{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "libs/*": ["../../libs/*"],
      "src/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*",
    "libs/**/*",
    "apps/**/*",
    "public/**/*.js",
    "test",
    "test/**/*.ts",
    "apps/gateway/test/playwright.config.ts",
    "apps/gateway/test/jest.integration.config.js"
  ]
}
