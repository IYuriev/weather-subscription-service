    "@willsoto/nestjs-prometheus": "^6.0.2",
    "cache-manager": "^6.4.3",
    "cache-manager-redis-store": "^3.0.1",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
