  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway",
    "build:email": "nest build email",
    "build:weather": "nest build weather",
    "build:subscription": "nest build subscription",
    "build:notification": "nest build notification",
    "start:gateway:dev": "nest start gateway --watch",
    "start:gateway:prod": "node dist/apps/gateway/main",
    "start:email:dev": "nest start email --watch",
    "start:email:prod": "node dist/apps/email/main",
    "start:weather:dev": "nest start weather --watch",
    "start:weather:prod": "node dist/apps/weather/main",
    "start:subscription:dev": "nest start subscription --watch",
    "start:subscription:prod": "node dist/apps/subscription/main",
    "start:notification:dev": "nest start notification --watch",
    "start:notification:prod": "node dist/apps/notification/main",
    "proto:generate": "protoc --proto_path=libs/proto/src --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=libs/proto/generated libs/proto/src/*.proto",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/weather-subscription-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:email": "jest --config apps/email/test/jest-unit.json",
    "test:weather": "jest --config apps/weather/test/jest-unit.json",
    "test:subscription": "jest --config apps/subscription/test/jest-unit.json",
    "test:notification": "jest --config apps/notification/test/jest-unit.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:integration": "jest --config apps/gateway/test/jest.integration.config.js",
    "test:e2e": "playwright test apps/gateway/test/e2e",
    "test:architecture": "jest --config apps/gateway/test/jest.architecture.config.json",
    "commitlint": "commitlint --edit",
    "commitlint:last": "commitlint --last --verbose"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.6.0",
